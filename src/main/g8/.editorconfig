root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4

[*.{scala,sbt}]
indent_size = 2

[*.{vue,svelte}]
indent_size = 2

[*.{html,xml}]
indent_size = 2

[*.{js,ts,coffee}]
indent_size = 2

[*.json]
indent_size = 2

[*.{css,less,scss}]
indent_size = 2

[*.conf]
indent_size = 2

[*.dfprop]
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
